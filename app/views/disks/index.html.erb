<p id="notice"><%= notice %></p>

<h1>
  Discos
  <% if params[:id] != nil %>
    - <%= @disks.first.singer.name %>
  <% end %>
</h1>

<table>
  <thead>
    <tr>
      <th>Singer</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disks.each do |disk| %>
      <tr>
        <td><%= disk.singer.name %></td>
        <td><%= disk.name %></td>
        <td><%= disk.description %></td>
        <td><%= link_to 'Show', disk %></td>
        <td><%= link_to 'Edit', edit_disk_path(disk) %></td>
        <td><%= link_to 'Destroy', disk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Atras', root_path %>
<%= link_to 'New Disk', new_disk_path %>
